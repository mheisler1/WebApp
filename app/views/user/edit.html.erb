<%= form_for(@user) do |f| %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :company %><br>
    <%= f.text_field :company %>
  </div>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :phone %><br>
    <%= f.text_field :phone %>
  </div>

 <div class="field">
    <%= f.label :approved %><br>
    <%= f.check_box :approved %>
  </div>

  <div class="actions">
    <%= f.submit "Update" %>
  </div>

<% end %>
